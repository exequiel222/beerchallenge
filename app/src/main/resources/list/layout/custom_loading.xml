<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/v_progress"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#61000000"
    android:elevation="20dp">

    <ProgressBar
        android:id="@+id/custom_loading_progress"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Cargando ..."
        app:layout_constraintEnd_toEndOf="@+id/custom_loading_progress"
        app:layout_constraintStart_toStartOf="@+id/custom_loading_progress"
        app:layout_constraintTop_toBottomOf="@+id/custom_loading_progress" />


</androidx.constraintlayout.widget.ConstraintLayout>